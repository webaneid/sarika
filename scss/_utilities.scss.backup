/**
 * Sarika Utility Classes
 *
 * DRY (Don't Repeat Yourself) utilities untuk digunakan di seluruh theme.
 * Prinsip: Write once, use everywhere.
 *
 * @package sarika
 */

// ============================================================================
// LAYOUT UTILITIES
// ============================================================================

// Container
.container {
	width: 100%;
	max-width: 1200px;
	margin-inline: auto;
	padding-inline: 1rem;

	@media (min-width: 640px) {
		padding-inline: 1.5rem;
	}

	@media (min-width: 1024px) {
		padding-inline: 2rem;
	}
}

.container-narrow {
	width: 100%;
	max-width: 800px;
	margin-inline: auto;
	padding-inline: 1rem;
}

.container-wide {
	width: 100%;
	max-width: 1400px;
	margin-inline: auto;
	padding-inline: 1rem;
}

// Display
.block { display: block; }
.inline-block { display: inline-block; }
.inline { display: inline; }
.flex { display: flex; }
.inline-flex { display: inline-flex; }
.grid { display: grid; }
.hidden { display: none; }

// Flex utilities
.flex-row { flex-direction: row; }
.flex-col { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.flex-nowrap { flex-wrap: nowrap; }

.items-start { align-items: flex-start; }
.items-center { align-items: center; }
.items-end { align-items: flex-end; }
.items-stretch { align-items: stretch; }

.justify-start { justify-content: flex-start; }
.justify-center { justify-content: center; }
.justify-end { justify-content: flex-end; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }

.gap-1 { gap: 0.25rem; }
.gap-2 { gap: 0.5rem; }
.gap-3 { gap: 0.75rem; }
.gap-4 { gap: 1rem; }
.gap-5 { gap: 1.25rem; }
.gap-6 { gap: 1.5rem; }
.gap-8 { gap: 2rem; }

// Grid utilities
.grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
.grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
.grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
.grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }

// Custom grid layouts
.grid-cols-2fr-1fr { grid-template-columns: 2fr 1fr; }

@media (min-width: 768px) {
	.md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
	.md\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
	.md\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }
}

@media (min-width: 1024px) {
	.lg\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
	.lg\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }
	.lg\:grid-cols-2fr-1fr { grid-template-columns: 2fr 1fr; }
}

// ============================================================================
// SPACING UTILITIES (Mobile-first, responsive)
// ============================================================================

// Padding
.p-0 { padding: 0; }
.p-1 { padding: 0.25rem; }
.p-2 { padding: 0.5rem; }
.p-3 { padding: 0.75rem; }
.p-4 { padding: 1rem; }
.p-5 { padding: 1.25rem; }
.p-6 { padding: 1.5rem; }
.p-8 { padding: 2rem; }

.px-2 { padding-inline: 0.5rem; }
.px-4 { padding-inline: 1rem; }
.px-6 { padding-inline: 1.5rem; }
.px-8 { padding-inline: 2rem; }

.py-2 { padding-block: 0.5rem; }
.py-4 { padding-block: 1rem; }
.py-6 { padding-block: 1.5rem; }
.py-8 { padding-block: 2rem; }
.py-12 { padding-block: 3rem; }
.py-16 { padding-block: 4rem; }

// Margin
.m-0 { margin: 0; }
.m-auto { margin: auto; }

.mx-auto { margin-inline: auto; }
.my-4 { margin-block: 1rem; }
.my-6 { margin-block: 1.5rem; }
.my-8 { margin-block: 2rem; }

.mt-2 { margin-top: 0.5rem; }
.mt-4 { margin-top: 1rem; }
.mt-6 { margin-top: 1.5rem; }
.mt-8 { margin-top: 2rem; }

.mb-2 { margin-bottom: 0.5rem; }
.mb-4 { margin-bottom: 1rem; }
.mb-6 { margin-bottom: 1.5rem; }
.mb-8 { margin-bottom: 2rem; }

// ============================================================================
// TYPOGRAPHY UTILITIES
// ============================================================================

// Font sizes
.text-xs { font-size: 0.75rem; line-height: 1rem; }
.text-sm { font-size: 0.875rem; line-height: 1.25rem; }
.text-base { font-size: 1rem; line-height: 1.5rem; }
.text-lg { font-size: 1.125rem; line-height: 1.75rem; }
.text-xl { font-size: 1.25rem; line-height: 1.75rem; }
.text-2xl { font-size: 1.5rem; line-height: 2rem; }
.text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
.text-4xl { font-size: 2.25rem; line-height: 2.5rem; }

// Font weight
.font-light { font-weight: 300; }
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }
.font-extrabold { font-weight: 800; }

// Text align
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

// Text transform
.uppercase { text-transform: uppercase; }
.lowercase { text-transform: lowercase; }
.capitalize { text-transform: capitalize; }

// Line height
.leading-none { line-height: 1; }
.leading-tight { line-height: 1.25; }
.leading-normal { line-height: 1.5; }
.leading-relaxed { line-height: 1.75; }

// ============================================================================
// COLOR UTILITIES (Using CSS Variables)
// ============================================================================

// Text colors
.text-primary { color: var(--sarika-color-primary); }
.text-secondary { color: var(--sarika-color-secondary); }
.text-body { color: var(--sarika-color-body); }
.text-light { color: var(--sarika-color-light); }
.text-dark { color: var(--sarika-color-dark); }
.text-accent { color: var(--sarika-color-accent); }
.text-white { color: var(--sarika-color-white); }
.text-black { color: var(--sarika-color-black); }

// Background colors
.bg-primary { background-color: var(--sarika-color-primary); }
.bg-secondary { background-color: var(--sarika-color-secondary); }
.bg-light { background-color: var(--sarika-color-light); }
.bg-dark { background-color: var(--sarika-color-dark); }
.bg-accent { background-color: var(--sarika-color-accent); }
.bg-white { background-color: var(--sarika-color-white); }
.bg-black { background-color: var(--sarika-color-black); }
.bg-transparent { background-color: transparent; }

// ============================================================================
// BORDER UTILITIES
// ============================================================================

.border { border: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
.border-0 { border: 0; }
.border-t { border-top: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
.border-b { border-bottom: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
.border-l { border-left: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
.border-r { border-right: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }

// Divide utilities (for grid/flex children)
.divide-x > * + * { border-left: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
.divide-y > * + * { border-top: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }

// Border colors
.divide-gray-200 > * + * { border-color: rgba(var(--sarika-color-dark-rgb), 0.1); }
.border-gray-200 { border-color: rgba(var(--sarika-color-dark-rgb), 0.1); }

@media (min-width: 1024px) {
	.lg\:divide-x > * + * { border-left: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
	.lg\:divide-y > * + * { border-top: 1px solid rgba(var(--sarika-color-dark-rgb), 0.1); }
}

// ============================================================================
// WIDTH & HEIGHT UTILITIES
// ============================================================================

.w-full { width: 100%; }
.w-auto { width: auto; }
.w-fit { width: fit-content; }

.h-full { height: 100%; }
.h-auto { height: auto; }

.min-h-screen { min-height: 100vh; }

// ============================================================================
// POSITION UTILITIES
// ============================================================================

.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }
.sticky { position: sticky; }

// ============================================================================
// OVERFLOW UTILITIES
// ============================================================================

.overflow-hidden { overflow: hidden; }
.overflow-auto { overflow: auto; }
.overflow-x-auto { overflow-x: auto; }
.overflow-y-auto { overflow-y: auto; }

// ============================================================================
// OPACITY UTILITIES
// ============================================================================

.opacity-0 { opacity: 0; }
.opacity-50 { opacity: 0.5; }
.opacity-75 { opacity: 0.75; }
.opacity-100 { opacity: 1; }

// ============================================================================
// VISIBILITY UTILITIES
// ============================================================================

.visible { visibility: visible; }
.invisible { visibility: hidden; }

// Screen reader only
.sr-only {
	position: absolute;
	width: 1px;
	height: 1px;
	padding: 0;
	margin: -1px;
	overflow: hidden;
	clip: rect(0, 0, 0, 0);
	white-space: nowrap;
	border-width: 0;
}

// ============================================================================
// RESPONSIVE UTILITIES
// ============================================================================

@media (max-width: 767px) {
	.sm\:hidden { display: none; }
}

@media (min-width: 768px) {
	.md\:block { display: block; }
	.md\:flex { display: flex; }
	.md\:hidden { display: none; }
	.md\:text-lg { font-size: 1.125rem; }
	.md\:text-xl { font-size: 1.25rem; }
	.md\:text-2xl { font-size: 1.5rem; }
}

@media (min-width: 1024px) {
	.lg\:block { display: block; }
	.lg\:flex { display: flex; }
	.lg\:hidden { display: none; }
	.lg\:text-xl { font-size: 1.25rem; }
	.lg\:text-2xl { font-size: 1.5rem; }
	.lg\:text-3xl { font-size: 1.875rem; }
}

// ============================================================================
// INTERACTIVE UTILITIES
// ============================================================================

.pointer-events-none { pointer-events: none; }
.pointer-events-auto { pointer-events: auto; }

.cursor-pointer { cursor: pointer; }
.cursor-not-allowed { cursor: not-allowed; }

// ============================================================================
// TRANSITION UTILITIES
// ============================================================================

.transition {
	transition-property: all;
	transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	transition-duration: 150ms;
}

.transition-colors {
	transition-property: color, background-color, border-color;
	transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
	transition-duration: 150ms;
}

.duration-150 { transition-duration: 150ms; }
.duration-300 { transition-duration: 300ms; }
.duration-500 { transition-duration: 500ms; }

// ============================================================================
// OBJECT FIT UTILITIES
// ============================================================================

.object-contain { object-fit: contain; }
.object-cover { object-fit: cover; }
.object-fill { object-fit: fill; }

// ============================================================================
// ASPECT RATIO UTILITIES
// ============================================================================

.aspect-square { aspect-ratio: 1 / 1; }
.aspect-video { aspect-ratio: 16 / 9; }
.aspect-4-3 { aspect-ratio: 4 / 3; }
